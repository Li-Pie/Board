@{
    ViewData["Title"] = "Home Page";
    var boards = ViewBag.board;
}


<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <h3 style="text-align: center;">글 리스트</h3>

        <hr />

        <table class="table table-hover">
            <thead>
                <tr>
                    <th width="10%" style="text-align: center;">번호</th>
                    <th width="40%" style="text-align: center;">제목</th>
                    <th width="10%" style="text-align: center;">작성일</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var board in boards)
                {
                    <tr>
                        <td style="text-align: center;">@board.No</td>
                        <td><a asp-controller="Home" asp-action="Detail" asp-route-id="@board.No">@board.Subject</a></td>
                        <td style="text-align: center;">@board.SysRegDT.ToString("yyyy'-'MM'-'dd")</td>
                    </tr>
                }


            </tbody>
        </table>

        <hr />

        <a asp-controller="Home" asp-action="write"><button type="button" class="btn btn-info float-right" style="margin: 5px; float: right;">글 작성</button></a>
    </div>
</div>