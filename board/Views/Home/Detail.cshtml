@{
    var board = ViewBag.board;
}

<div class="row">
    <div class="col-sm-12">
        <br />
        <table class="table">
            <tr>
                <td style="text-align: right;">
                    <h4 style="text-align: left;">
                        <span class="badge bg-primary">게시판</span>
                        @board.Subject
                    </h4>
                    @board.SysRegDT.ToString("yyyy'-'MM'-'dd HH")
                </td>
            </tr>
            <tr>

                @if (board.Content == null)
                {
                    <td>내용이 없습니다.</td>
                }
                else
                {
                    <td>@board.Content.Replace("\r\n", "<br />")</td>
                }

            </tr>

        </table>

        <hr />

        <div class="form-group">
            <a asp-controller="home" asp-action="list"><button type="button" class="btn btn-warning float-right" style="margin: 5px;">목록</button></a>

            <a asp-controller="home" asp-action="delete" asp-route-id="@board.No"><button type="button" class="btn btn-danger float-right" style="margin: 5px; float: right;">삭제</button></a>
            <a asp-controller="home" asp-action="edit" asp-route-id="@board.No"><button type="button" class="btn btn-primary float-right" style="margin: 5px; float: right;">수정</button></a>
        </div>
    </div>
</div>